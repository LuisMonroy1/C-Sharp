using System;

namespace Lecture2_23
{
    class Program
    {
        static void Main(string[] args)
        {
            
            /*
             * Write a program to check whether a triangle is valid or not, when the 
             * three angles of the triangle are entered by the user. A triangle is valid if 
             * the sum of all the three angles is equal to 180 degrees.
             * 
             *Expected Output
             *Enter the three angles of triangle:45
             *60
             *75
             *Triangle is valid
             *Enter the three angles of triangle:75
             *23
             *56
             *Triangle is not valid
             */

            int a;
            int b;
            int c;
            int sum;

            Console.WriteLine("Enter the first side (a)");
            a = Convert.ToInt32(Console.ReadLine());
            Console.WriteLine("Enter the second side (b)");
            b = Convert.ToInt32(Console.ReadLine());
            Console.WriteLine("Enter the third side (c)");
            c = Convert.ToInt32(Console.ReadLine());

            sum = a + b + c;

            if (sum == 180)
            {
                Console.Write("The triangle is valid");
            }
            else
            {
                Console.Write("The triangle is not valid");
            }


        }
    }
}
